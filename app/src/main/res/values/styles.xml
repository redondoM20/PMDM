<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Body">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/cardview_dark_background</item>
    </style>

    <style name="Header">
        <item name="android:layout_height">@dimen/header_heigth</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/black</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/header_padding</item>
    </style>

    <style name="Footer">
        <item name="android:layout_height">@dimen/footer_heigth</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/black</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="FooterIcon">
        <item name="android:layout_height">@dimen/footer_icon_height</item>
        <item name="android:layout_width">@dimen/footer_icon_width</item>
    </style>

    <style name="FooterIconText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/footer_icon_text_height</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AvatarView">
        <item name="android:layout_width">@dimen/avatarView_width</item>
        <item name="android:layout_height">@dimen/avatarView_height</item>
    </style>

    <style name="FilmView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LineLayout">
        <item name="android:layout_marginTop">@dimen/line_margin_top</item>
        <item name="android:layout_marginStart">@dimen/line_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/line_margin_end</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:layout_width">@dimen/line_width</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="FilmName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_size1</item>
    </style>

    <style name="Block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/block_margin_bottom</item>
    </style>

    <style name="UserName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/name_height</item>
        <item name="android:layout_marginStart">@dimen/line_margin_start</item>
        <item name="android:layout_marginBottom">@dimen/line_margin_end</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/name_textSize</item>
    </style>

    <style name="Avatar">
        <item name="android:layout_width">@dimen/avatar_width</item>
        <item name="android:layout_height">@dimen/avatar_height</item>
    </style>

    <style name="Icon">
        <item name="android:layout_height">@dimen/icon_height</item>
        <item name="android:layout_width">@dimen/icon_width</item>
        <item name="android:layout_margin">@dimen/icon_margin</item>
    </style>

    <style name="UserBlock">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/userBlock_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/userBlock_margin_top</item>
    </style>

    <style name="OptionsMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginEnd">@dimen/optionMenu_margin_end</item>
        <item name="android:layout_marginTop">@dimen/optionMenu_margin_top</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/optionMenu_textSize</item>
    </style>

</resources>