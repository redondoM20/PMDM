<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="3dp"
        android:background="@color/black">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/info"
            style="@style/icon"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/Autodescargas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/info"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:text="Autodescargas" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/Autodescargas"
            android:textColor="@color/teal_700"
            android:textSize="15sp"
            tools:text="ACTIVADA" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/edit"
            style="@style/icon"
            android:layout_alignParentEnd="true"
            tools:src="@tools:sample/avatars" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user01"
        android:layout_below="@id/header"
        style="@style/userBlock">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image01"
            style="@style/avatar"
            android:layout_alignParentStart="true"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text01"
            style="@style/UserName"
            android:layout_toEndOf="@id/image01"
            tools:text="Alex" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/bloque01"
        style="@style/Block"
        android:layout_below="@id/user01">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image02"
            style="@style/AvatarView"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text02"
            style="@style/filmName"
            android:layout_toEndOf="@id/image02"
            tools:text="YOU" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text03"
            style="@style/textLayout"
            android:layout_below="@id/text02"
            android:layout_toEndOf="@id/image02"
            tools:text="2 episodios" />

        <LinearLayout
            android:id="@+id/line01"
            style="@style/LineLayout"
            android:layout_below="@id/text02"
            android:layout_toEndOf="@id/text03"
            android:orientation="horizontal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text04"
            style="@style/textLayout"
            android:layout_below="@id/text02"
            android:layout_toEndOf="@id/line01"
            tools:text="1,5 GB" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bloque02"
        style="@style/Block"
        android:layout_below="@id/bloque01">

        <androidx.appcompat.widget.AppCompatImageView
