        <LinearLayout
            android:id="@+id/line04"
            style="@style/LineLayout"
            android:layout_below="@id/text13"
            android:layout_toEndOf="@id/text14"
            android:orientation="horizontal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text15"
            style="@style/textLayout"
            android:layout_below="@id/text13"
            android:layout_toEndOf="@id/line04"
            tools:text="1 GB" />


    </RelativeLayout>

