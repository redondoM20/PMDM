            android:layout_toEndOf="@id/image10"
            tools:text="4 episodios" />

        <LinearLayout
            android:id="@+id/line03"
            style="@style/LineLayout"
            android:layout_below="@id/text09"
            android:layout_toEndOf="@id/text10"
