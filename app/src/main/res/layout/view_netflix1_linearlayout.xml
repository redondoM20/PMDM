            android:orientation="horizontal" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text07"
            style="@style/textLayout"
            android:layout_below="@id/text05"
            android:layout_toEndOf="@id/line02"
            tools:text="1,7 GB" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user02"
