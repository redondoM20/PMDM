<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Body">

    <LinearLayout
        android:id="@+id/menu"
        style="@style/Header">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_netflix"
            style="@style/icon"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_option_programas"
            style="@style/OptionsMenu"
            tools:text="Programas" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_option_peliculas"
            style="@style/OptionsMenu"
            tools:text="Peliculas" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_option_mi_lista"
            style="@style/OptionsMenu"
            tools:text="Mi lista" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_populares_en_netflix"
        android:layout_below="@id/menu"
        style="@style/UserName"
        tools:text="@tools:sample/first_names" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/primera_imagen_populares"
        style="@style/FilmView"
        android:layout_below="@id/label_populares_en_netflix"
        tools:src="@tools:sample/avatars" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/segunda_imagen_populares"
        style="@style/FilmView"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/label_populares_en_netflix"
        android:layout_toEndOf="@id/primera_imagen_populares" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tercera_imagen_populares"
        style="@style/FilmView"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/label_populares_en_netflix"
        android:layout_toEndOf="@id/segunda_imagen_populares" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_tendencias"
        android:layout_below="@id/primera_imagen_populares"
        style="@style/UserName"
        tools:text="@tools:sample/first_names" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/primera_imagen_tendencias"
        style="@style/FilmView"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/label_tendencias" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/segunda_imagen_tendencias"
        style="@style/FilmView"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/label_tendencias"
        android:layout_toEndOf="@id/primera_imagen_tendencias" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tercera_imagen_tendencias"
        style="@style/FilmView"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/label_tendencias"
        android:layout_toEndOf="@id/segunda_imagen_tendencias" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/label_verlo_nuevamente"
        android:layout_below="@id/primera_imagen_tendencias"
        style="@style/UserName"
        tools:text="@tools:sample/first_names" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/priemra_imagen_verlo_nuevamente"
        style="@style/FilmView"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/label_verlo_nuevamente" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/segunda_imagen_verlo_nuevamente"
        style="@style/FilmView"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/label_verlo_nuevamente"
        android:layout_toEndOf="@id/priemra_imagen_verlo_nuevamente" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tercera_imagen_verlo_nuevamente"
        style="@style/FilmView"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/label_verlo_nuevamente"
        android:layout_toEndOf="@id/segunda_imagen_verlo_nuevamente" />

    <RelativeLayout
        style="@style/Footer"
        android:layout_alignParentBottom="true">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_inicio"
            style="@style/FooterIcon"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/FooterIconText"
            android:layout_below="@id/icon_inicio"
            android:layout_marginStart="25dp"
            android:textColor="@color/white"
            tools:text="Inicio" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_buscar"
            style="@style/FooterIcon"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@id/icon_inicio"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/FooterIconText"
            android:layout_below="@id/icon_buscar"
            android:layout_marginStart="45dp"
            android:layout_toEndOf="@id/icon_inicio"
            tools:text="Buscar"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_proximamente"
            style="@style/FooterIcon"
            android:layout_marginStart="60dp"
            android:layout_toEndOf="@id/icon_buscar"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/FooterIconText"
            android:layout_below="@id/icon_proximamente"
            android:layout_marginStart="30dp"
            android:layout_toEndOf="@id/icon_buscar"
            tools:text="Proximamente"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_descargas"
            style="@style/FooterIcon"
            android:layout_marginStart="60dp"
            android:layout_toEndOf="@id/icon_proximamente"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/FooterIconText"
            android:layout_below="@id/icon_descargas"
            android:layout_marginStart="45dp"
            android:layout_toEndOf="@id/icon_proximamente"
            tools:text="Descargas"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon_mas"
            style="@style/FooterIcon"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/FooterIconText"
            android:layout_below="@id/icon_descargas"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="25dp"
            tools:text="Mas"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>