<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/cardview_dark_background">

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@color/black">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon01"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            tools:src="@tools:sample/avatars"
            android:layout_below="@id/text01" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/option01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:text="Programas"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/option02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:text="Peliculas"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/option03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:textSize="20dp"
            android:text="Mi lista"
            android:textColor="@color/white" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text01"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="35dp"
        android:layout_marginBottom="15dp"
        tools:text="@tools:sample/first_names"
        android:layout_below="@id/menu"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/text01" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/text01"
        android:layout_toRightOf="@id/image01" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/text01"
        android:layout_toRightOf="@id/image02" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text02"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        tools:text="@tools:sample/first_names"
        android:layout_below="@id/image01"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/text02" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/text02"
        android:layout_toRightOf="@id/image01" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/text02"
        android:layout_toRightOf="@id/image02" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text03"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        tools:text="@tools:sample/first_names"
        android:layout_below="@id/image04"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/text03" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image08"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/text03"
        android:layout_toRightOf="@id/image01" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@tools:sample/avatars"
        android:layout_below="@id/text03"
        android:layout_toRightOf="@id/image02" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon02"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:src="@tools:sample/avatars"
            android:layout_alignParentStart="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Inicio"
            android:layout_below="@id/icon02"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon03"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/icon02"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Buscar"
            android:layout_below="@id/icon02"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon04"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/icon03"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Proximamente"
            android:layout_below="@id/icon02"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon05"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/icon04"
            tools:src="@tools:sample/avatars" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Descargas"
            android:layout_below="@id/icon02"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon06"
            android:layout_width="30dp"
            android:layout_height="30dp"
            tools:src="@tools:sample/avatars"
            android:layout_alignParentEnd="true" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Mas"
            android:layout_below="@id/icon02"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white" />

    </RelativeLayout>

</RelativeLayout>